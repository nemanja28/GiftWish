<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
            android:id="@+id/imageViewProfileImage"
            android:layout_width="72dp"
            android:layout_height="72dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="6dp"
            android:layout_marginTop="6dp"
            android:layout_marginStart="6dp"
            android:src="@drawable/ic_rbt_logo"/>

    <TextView
            android:id="@+id/textViewEmployeeFullName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text="Pera Peric"
            android:textSize="18dp"
            android:textColor="@android:color/black"
            app:layout_constraintStart_toEndOf="@+id/imageViewProfileImage"
            app:layout_constraintTop_toTopOf="@+id/imageViewProfileImage"
            app:layout_constraintBottom_toTopOf="@+id/textViewBirthday"
            app:layout_constraintVertical_chainStyle="packed"
            app:layout_constraintEnd_toEndOf="parent"
            android:textAlignment="textStart"
            android:layout_marginEnd="12dp"
            android:layout_marginStart="12dp"/>
    <TextView
            android:id="@+id/textViewBirthday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/textViewEmployeeFullName"
            app:layout_constraintStart_toStartOf="@+id/textViewEmployeeFullName"
            app:layout_constraintVertical_chainStyle="packed"
            app:layout_constraintBottom_toBottomOf="@+id/imageViewProfileImage"
            tools:text= "@tools:sample/date/mmddyy"/>

    <TextView
            android:id="@+id/textViewWishes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@+id/textViewBirthday"
            app:layout_constraintEnd_toEndOf="@+id/textViewEmployeeFullName"
            android:layout_marginEnd="6dp"
            tools:text= "12"/>


</androidx.constraintlayout.widget.ConstraintLayout>