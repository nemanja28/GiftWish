<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white">

    <TextView
        android:id="@+id/textViewGiftName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:ellipsize="end"
        android:textAlignment="textStart"
        android:textColor="@android:color/black"
        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/textViewGiftPrice"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Gift 1" />

    <TextView
        android:id="@+id/textViewGiftPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:textAlignment="textStart"
        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="@+id/textViewGiftName"
        app:layout_constraintEnd_toStartOf="@+id/textViewArrow"
        app:layout_constraintStart_toEndOf="@+id/textViewGiftName"
        app:layout_constraintTop_toTopOf="@+id/textViewGiftName"
        tools:text="50$" />

    <TextView
        android:id="@+id/textViewArrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:includeFontPadding="false"
        android:text=">"
        android:textAlignment="textStart"
        android:textColor="@color/colorPrimary"
        android:textSize="28dp"
        app:layout_constraintBottom_toBottomOf="@+id/textViewGiftPrice"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textViewGiftPrice"
        app:layout_constraintTop_toTopOf="@+id/textViewGiftPrice" />


</androidx.constraintlayout.widget.ConstraintLayout>